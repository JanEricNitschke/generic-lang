{
  # New variable shadows outer variable.
  foreach (var i in [0]) {}

  # Goes out of scope after loop.
  var i = "after";
  print(i); # expect: after

  # Can reuse an existing variable.
  foreach (var i in [0]) {
    print(i); # expect: 0
  }
}

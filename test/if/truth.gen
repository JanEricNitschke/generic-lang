# False, nil, zero and empty string are false.
if (false) {
    print("bad");
} else {
    print("false"); # expect: false
}
if (nil) {
    print("bad");
} else {
    print("nil"); # expect: nil
}
if (0) {
    print("bad");
} else {
    print(0); # expect: 0
}
if ("") {
    print("bad");
} else {
    print("empty"); # expect: empty
}

# Everything else is true.
if (true) {
    print(true); # expect: true
}
if 1 {
    print(1); # expect: 1
}

if "apple" {
    print("apple");  # expect: apple
}
